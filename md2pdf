        }

        .pane {
            flex: 1;
            display: flex;
            flex-direction: column;
            overflow: hidden;
            background: white;
        }

        .pane-header {
            padding: 8px 15px;
            background: #f1f5f9;
            font-size: 12px;
            font-weight: 600;
            color: #64748b;
            text-transform: uppercase;
            border-bottom: 1px solid var(--border-color);
        }

        /* 編輯器 */
        #editor {
            flex: 1;
            padding: 20px;
            border: none;
            resize: none;
            outline: none;
            font-family: 'Fira Code', 'Cascadia Code', monospace;
            font-size: 15px;
            line-height: 1.6;
            color: #334155;
        }

        /* 預覽區 */
        #preview-container {
            flex: 1;
