    <title>Modern Markdown to PDF</title>
    
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.8.0/styles/github.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.8.0/highlight.min.js"></script>

    <style>
        :root {
            --primary-color: #2563eb;
            --bg-color: #f8fafc;
            --border-color: #e2e8f0;
        }

        body, html {
            margin: 0; padding: 0;
            height: 100%; font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            background: var(--bg-color);
        }

        /* 頂部導覽列 */
        nav {
            height: 60px;
            background: #fff;
            border-bottom: 1px solid var(--border-color);
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
            box-shadow: 0 1px 2px rgba(0,0,0,0.05);
        }

        .logo { font-weight: 700; color: var(--primary-color); font-size: 1.2rem; }

        .actions { display: flex; gap: 10px; }

        .btn {
            padding: 8px 16px;
            border-radius: 6px;
            font-size: 14px;
            cursor: pointer;
            border: 1px solid var(--border-color);
            background: #white;
            transition: all 0.2s;
        }

        .btn-primary { background: var(--primary-color); color: white; border: none; }
        .btn-primary:hover { background: #1d4ed8; }

        /* 主容器 */
        main {
            display: flex;
            height: calc(100vh - 60px);
